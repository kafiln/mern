{
	"compilerOptions": {
		"module": "commonjs",
		"lib": ["es2015", "DOM"],
		"skipLibCheck": true,
		"esModuleInterop": true,
		"target": "Es5",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"removeComments": true,
		"outDir": "build",
		"baseUrl": "src",
		"allowJs": false,
		"strict": true,
		"paths": {
			"*": ["node_modules/*", "src/types/*"]
		}
	},
	"include": ["src/**/*"]
}
